<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - First Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

	<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.1/dist/semantic.min.css" />
	<!--<script src="~/Scripts/react/node_modules/semantic-ui-react/dist/umd/semantic-ui-react.min.js"></script> -->

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("React Project", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Product", "Index", "Products")</li>
					<li>@Html.ActionLink("Customer", "Index", "Customers")</li>
					<li>@Html.ActionLink("Store", "Index", "Stores")</li>
					<li>@Html.ActionLink("Product Sales", "Index", "ProductSolds")</li>

				</ul>
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year -Jaipreet</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")   
	@RenderSection("scripts", required: false)

	@Scripts.Render("~/bundles/bootstrap")
</body>
    </html>
